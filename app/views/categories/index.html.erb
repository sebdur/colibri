<div class="container">
  <div class="text-center">
    <h1 class="mt-3">Categorías</h1>
    <%= link_to new_category_path, class:"btn btn-lg btn-outline-dark rounded-pill" do %>
    <%= render 'partials/icons/plus' %>Nueva Categoría
    <% end %>
  </div>
  <% if @categories.present? %>
  <div class="col-lg-12 py-5">
    <div class="table-responsive">
      <table class="table table-borderless text-center">
        <thead>
          <tr>
            <th>Nombre</th>
          </tr>
        </thead>

        <tbody class="border-top">
          <% @categories.order(:id).each do |category| %>
          <tr class="border-bottom" id="deleteCategory<%= category.id %>">
            <td class="align-middle text-capitalize"><%= category.name %></td>
            <td class="align-middle icons"><%= link_to edit_category_path(category) do render 'partials/icons/edit' end %></td>
            <td class="align-middle icons"><%= link_to category, method: :delete, data: { confirm: 'Are you sure?' }, remote: true do render 'partials/icons/trash' end%></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <% end %>
</div>

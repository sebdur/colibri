    if (seconds == 1) {
      var temp = document.getElementById('failure-countdown');
      temp.innerHTML = "...";
      return;
    }

    seconds--;
    var temp = document.getElementById('counter-failure');
    temp.innerHTML = seconds;
    timeoutMyOswego = setTimeout(countdown, 1000);
  }

  countdown();

